<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrmHomePage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#5627FD"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#A5DDEA"
            android:drawableLeft="@drawable/home"
            android:text="Home"
            android:textAllCaps="false"
            android:textColor="#020F22"
            android:textSize="18sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnDisponivel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#5627FD"
            android:drawableTop="@drawable/graph"
            android:textSize="12sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#5627FD"
            android:drawableTop="@drawable/person" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnConfig"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#5627FD"
            android:drawableTop="@drawable/settings" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="604dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginBottom="10dp"
            android:background="#FBFBFB"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="15dp"
                android:background="@drawable/lateral_red"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bordas">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:paddingLeft="7dp"
                    android:text="Tesouro Prefixado 2026"
                    android:textColor="#CC2121"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:textColor="#2B2A2A"
                    android:paddingLeft="7dp"
                    android:textSize="13sp"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:text="12,05% (a.a.)"
                     />

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="1dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="55dp"
                    android:orientation="vertical">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inv. mínimo"
                    android:textColor="#2B2A2A"
                    android:paddingLeft="7dp"
                    android:textSize="16sp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 36,48"
                    android:layout_marginTop="4dp"
                    android:textColor="#000000"
                    android:paddingLeft="7dp"
                    android:textSize="20sp"
                    android:gravity="left" />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vencimento"
                            android:textColor="#2B2A2A"
                            android:paddingLeft="7dp"
                            android:textSize="16sp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="01/01/2026"
                            android:layout_marginTop="4dp"
                            android:textColor="#000000"
                            android:paddingLeft="7dp"
                            android:textSize="20sp"
                            android:gravity="left" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="115dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="15dp"
                android:background="@drawable/lateral_green"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bordas">

                <TextView
                    android:id="@+id/textVie3"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:paddingLeft="7dp"
                    android:text="Tesouro Selic 2026"
                    android:textColor="#42A305"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textVie4"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:textColor="#2B2A2A"
                    android:paddingLeft="7dp"
                    android:textSize="13sp"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:text="SELIC + 0,0959% (a.a.)"
                    />

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="1dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="165dp"
                        android:layout_height="55dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/textVie5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Inv. mínimo"
                            android:textColor="#2B2A2A"
                            android:paddingLeft="7dp"
                            android:textSize="16sp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/textVie6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="R$ 129,70"
                            android:layout_marginTop="4dp"
                            android:textColor="#000000"
                            android:paddingLeft="7dp"
                            android:textSize="20sp"
                            android:gravity="left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textVie7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vencimento"
                            android:textColor="#2B2A2A"
                            android:paddingLeft="7dp"
                            android:textSize="16sp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/textVie8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="01/03/2026"
                            android:layout_marginTop="4dp"
                            android:textColor="#000000"
                            android:paddingLeft="7dp"
                            android:textSize="20sp"
                            android:gravity="left" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <Button
            android:id="@+id/btnPerfil2"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/perfil"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/person" />

        <TextView
            android:id="@+id/textView2"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Investimentos Realizados" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>